<Window x:Class="Watchdog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:vm="clr-namespace:Watchdog.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Watchdog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainVM />
    </Window.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Insira o endereço" HorizontalAlignment="Left" Margin="0,0,0,4" />
            <TextBox HorizontalAlignment="Left" Width="280" Text="{Binding Endereco,Mode=TwoWay,UpdateSourceTrigger = PropertyChanged}" />
            <Button HorizontalAlignment="Right" Content="Vigiar" Width="100" Margin="0,4,0,0" Command="{Binding TesteCommand}" />
        </StackPanel>
    </Grid>
</Window>
